<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gush Souvenirs & Cafe @ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="@Url.Content("/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("/css/modern-business.css")" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->
                @Html.ActionLink("Gush Souvenirs & Cafe ", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Session["UserId"] != null)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Session["username"]</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a>

                                            @Html.ActionLink("Dashboard", "Dashboard", "Dashboard")

                                        </a>
                                    </li>
                                    <li>
                                        <a>


                                            @Html.ActionLink("Inventories", "Index", "Inventories")

                                        </a>
                                    </li>
                                    <li>
                                        <a>

                                            @Html.ActionLink("Sales", "Index", "Sales")

                                        </a>
                                    </li>

                                </ul>
                            </li>
                        } }
                    <li id="about">
                        @Html.ActionLink("About", "Index", "About")
                    </li>
                    <li id="souvenirs">
                        @Html.ActionLink("Souvenirs", "Index", "Souvenirs")
                    </li>
                    <li id="contact">
                        @Html.ActionLink("Contact", "Index", "Contact")
                    </li>
                    <li id="events">
                        @Html.ActionLink("Events", "Index", "Events")
                    </li>
                  

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-align-justify" aria-hidden="false"></span></a>
                        <ul class="dropdown-menu">

                            <li><a>@Html.ActionLink("Register", "AdminAuthentication", "Users")</a></li>
                            <li>
                                <a>@Html.ActionLink("Login", "Login", "Users")</a>
                            </li>
                            <li>
                                <a>
                                    @{
                                        if (Session["UserId"] != null)
                                        {
                                            @Html.ActionLink("Logout", "Logout", "Users")
                                        }
                                    }
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->

        </div>
        <!-- /.container -->
    </nav>

    @RenderBody()

    <div class="container">

        <hr>

        <footer>
            <center>
                <p>Copyright &copy; Gush Souvenirs & Cafe 2016</p>
            </center>
        </footer>

    </div>
    <!-- /.container -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="@Url.Content("/js/bootstrap.js")"></script>
    <script src="@Url.Content("/js/modern-business.js")"></script>
</body>
</html>